

<div class="row">
  <div class="large-12 columns">
    <h1>${?item.Name}</h1>



    <% if item.Customer != 0: %>
    <div class="row">
      <div class="large-1 columns">  Klant </div>
      <div class="large-11 columns">
        <a href="/Customer/${item.Customer.Slug}/view"> ${?item.Customer.Name} </a>
      </div>
    </div>
    <% end %>


    <span>Comments</span>
    <textarea data-live-comments="/application/${item.Slug}/comments">${?item.Comments}</textarea>
    
    <div class="row">
      <div class="large-12 columns">
        <h2>Projecten</h2>
        <table class="small-blocks tablesorter" id="customers">
          <thead>
            <tr>
              <th class="{sorter: false}">Naam</th>
              <th class="{sorter: false}">Type</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% for project in item.Projects: %>
            <tr>
              <td class="name">
                <a href="/project/${project.Slug}/view">${?project.Name}</a>
              </td>
              <td>${?project.TypeString}</td>
              <td>
                <% if project.Closed :%>
                <span class="red">Gesloten</span>
                <% else :%>
                <span class="green">Open</span>
                <% end %>
              </td>
            </tr>
            <% end %>
            
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>

